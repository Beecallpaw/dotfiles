# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3blocks -c ~/.config/i3/i3blocks.conf
        
        # output for (wifi, slack, etc) on status bar
        tray_output none
        
        # Toggle status bar with $mod
        mode hide
        hidden_state hide
        modifier $mod

        # Disable all tray icons
         colors {
        background $black2
        statusline $white2
        separator $white2 

        #                  border background text
        focused_workspace  $background $background $green1
        active_workspace   $black2 $black1 $white2
        inactive_workspace $black1 $black2 $foreground
        urgent_workspace   $red1 $red1 $white2
        binding_mode       $background $red2 $white2
    }
}
# Sreen brightness controls
bindsym --release XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
bindsym --release XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness

# Media player controls
