# using the same workspace shortcut will focus on your last 
workspace_auto_back_and_forth yes

# Main image path
set $imagepath /home/bee/Pictures/download.png

# Lockscreen image
set $i3lockscreen i3lock -i $imagepath -t

# shutdown / restart / suspend...
set $mode_system System lock (l), logout (e), suspend (s), hibernate (h), reboot (r), shutdown (x)

mode "$mode_system" {
    bindsym l exec --no-startup-id $i3lockscreen, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $i3lockscreen && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $i3lockscreen && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym x exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+BackSpace mode "$mode_system"

# default workspace wallpaper
exec --no-startup-id feh --no-fehbg --bg-fill $imagepath

